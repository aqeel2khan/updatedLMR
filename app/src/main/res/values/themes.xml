    <style name="CustomBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0.3</item>
        <!-- You can customize other properties as needed -->
    </style>
    <style name="Bottom_sheet_dialog">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:drawablePadding">@dimen/_20ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_6ssp</item>
    </style>

    <style name="CustomSnackbarThemeBlack">
        <item name="snackbarStyle">@style/MySnackBarStyleBack</item>
    </style>

    <style name="MySnackBarStyleBack" parent="Widget.MaterialComponents.Snackbar">
