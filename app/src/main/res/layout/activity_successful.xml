<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
    android:id="@+id/img1"
    android:src="@drawable/img_3"
    android:layout_width="370dp"
android:layout_marginStart="10dp"
    android:layout_marginTop="100dp"
    android:clipToOutline="true"

    android:scaleType="centerCrop"
    android:layout_height="300dp"/>
<androidx.cardview.widget.CardView
    android:id="@+id/card"
    android:layout_width="250dp"

     android:layout_marginLeft="60dp"
     android:layout_marginTop="150dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="30dp"
    android:layout_height="205dp">
    <ImageView
        android:id="@+id/img"
        android:src="@drawable/img_2"
        android:layout_width="250dp"

        android:layout_height="120dp"/>
    <TextView
        android:layout_marginTop="135dp"
        android:textStyle="bold"
        android:text="Syed Ali Weds Mehajabin Begum"
        android:layout_width="200dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="173dp"
        android:layout_marginStart="10dp"
        android:text="Jan 23rd 2019, 9:30 PM onwards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.cardview.widget.CardView>
    <ImageView
        android:src="@drawable/img_4"
        android:layout_below="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/success"
        android:layout_below="@+id/img1"
        android:text="Successful"
        android:textSize="27sp"
        android:textStyle="bold"
          android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/events"
        android:layout_below="@+id/success"
        android:textAlignment="center"
        android:textSize="23sp"
        android:layout_marginTop="15dp"
        android:text="You have created your events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/would"
        android:layout_below="@+id/events"
        android:textAlignment="center"
        android:textSize="20sp"

        android:text="Would you like to..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/design"
        android:layout_below="@+id/success"
        android:src="@drawable/img_5"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_below="@+id/would"
        android:layout_width="320dp"
        android:layout_marginTop="22dp"

        android:layout_marginLeft="20dp"
        android:layout_height="50dp">
     <ImageView
         android:id="@+id/home"
         android:src="@drawable/img_6"
        android:layout_marginLeft="50dp"
         android:padding="15dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
        <TextView
            android:text="BOOK A VENUE"
            android:textSize="15sp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_below="@+id/card1"
        android:layout_width="320dp"
        android:layout_marginTop="10dp"

        android:layout_marginLeft="20dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/home1"
            android:src="@drawable/img_7"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="BOOK A PHOTOGRAPHER"
            android:textSize="15sp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_below="@+id/card3"
        android:layout_width="320dp"
        android:layout_marginTop="10dp"

        android:layout_marginLeft="20dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/home3"
            android:src="@drawable/img"
            android:layout_marginStart="20dp"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="CHECK ALL OUR VENDORS"
            android:textSize="15sp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_below="@+id/card4"
        android:text="Skip for now"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
