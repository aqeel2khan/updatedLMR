<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".view.activity.BuySubscriptionActivity">
    <RelativeLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/back_shape_black"
            android:layout_marginBottom="20dp"
            android:padding="8dp"
            android:src="@drawable/arrow_back_black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_55sdp"
        android:background="@drawable/rounded_bg_main">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_workout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/food" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.example.lmr.custom.MyCustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/radius_shape"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="@string/workout_batch_capital"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:background="@color/work_color"
                    android:padding="@dimen/_15sdp">

                    <com.example.lmr.custom.MyCustomTextView
                        android:id="@+id/workout_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_weight_loss"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/workOutBath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="from"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8ssp"
                            android:layout_marginEnd="@dimen/_2sdp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$35"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/workOutBatchRelative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/workOutBath"
                        android:layout_marginTop="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:src="@drawable/flash_icon"
                                app:tint="@color/white" />

                            <com.example.lmr.custom.MyCustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="131"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />
                            <com.example.lmr.custom.MyCustomTextView
                                android:id="@+id/tv_boost_kcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:text="kcal"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:src="@drawable/clock"
                                app:tint="@color/white" />

                            <com.example.lmr.custom.MyCustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:text="93"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />
                            <com.example.lmr.custom.MyCustomTextView
                                android:id="@+id/tv_boost_min_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:text="mins"
                                android:textColor="@color/white"
                                android:textFontWeight="500"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/workOutBatchRelative"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/profile_image" />

                        <com.example.lmr.custom.MyCustomTextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Bessie Cooper"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_select_plan"
            android:layout_below="@id/card_workout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp">
            <ImageView
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/calender"
                app:tint="@color/terms_color" />
            <com.example.lmr.custom.MyCustomTextView
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_plan_duration"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/outfit_semi_bold"/>
            <ImageView
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_arrow"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gry"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_below="@id/ll_select_plan"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:id="@+id/view1"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_batch_pro"
            android:layout_below="@id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_115sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/food" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.lmr.custom.MyCustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/radius_shape"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="@string/txt_batch_pro"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp">
                    <com.example.lmr.custom.MyCustomTextView
                        android:id="@+id/batch_pro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_get_batch_pro"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">
                        <com.example.lmr.custom.MyCustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$78"
                            android:fontFamily="@font/outfit_extra_bold"
                            android:textSize="@dimen/_16ssp"
                            android:textColor="@color/white" />

                        <com.example.lmr.custom.MyCustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/month"
                            android:fontFamily="@font/outfit_semi_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            android:layout_marginEnd="@dimen/_2sdp"/>

                    </LinearLayout>
                </RelativeLayout>
                <com.example.lmr.custom.MyCustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/txt_get_batch_pro_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9ssp"
                    android:layout_marginEnd="@dimen/_20sdp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_below="@id/card_batch_pro"
            android:id="@+id/ll_total_sybscribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.lmr.custom.MyCustomTextView
                    android:id="@+id/durationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="Grand total"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp" />

                <com.example.lmr.custom.MyCustomTextView
                    android:id="@+id/dollerText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="sans-serif-medium"
                    android:text="$35"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_18ssp" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_subscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button"
                android:backgroundTint="#516634"
                android:textAllCaps="false"
                android:textSize="@dimen/_14ssp"
                android:text="@string/txt_check_out"
                android:textColor="@color/white" />
        </LinearLayout>
        <com.example.lmr.custom.MyCustomTextView
            android:id="@+id/txt_add_promo"
            android:layout_below="@id/ll_total_sybscribe"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="@string/txt_add_pro"
            android:textStyle="bold"
            android:textColor="@color/terms_color"
            android:textSize="@dimen/_14ssp" />
    </RelativeLayout>


</RelativeLayout>